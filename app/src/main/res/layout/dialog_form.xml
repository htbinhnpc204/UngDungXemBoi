<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/ic_card_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="8dp"
            android:text="Xem bói tình yêu qua tên"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/MaleArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            android:background="@drawable/ic_area_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Họ tên:" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <EditText
                    android:id="@+id/edtNameMale"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_text_bg"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh:"/>

                <Space
                    android:layout_width="6dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/DoBMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="20-04-2001"/>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginRight="8dp">
                    <ImageView
                        android:id="@+id/btnSelectDoBMale"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_calendar"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/FeMaleArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            android:background="@drawable/ic_area_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Họ tên:" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <EditText
                    android:id="@+id/edtNameFMale"
                    android:layout_width="0dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_text_bg"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh:" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/DoBFMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="20-04-2001"/>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginRight="8dp">
                    <ImageView
                        android:id="@+id/btnSelectDoBFMale"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_calendar"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="2dp"
            android:layout_marginVertical="4dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:textColor="@color/primary_color"
                android:text="Xem kết quả"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/ic_btn_bg"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/primary_color"
                android:text="Hủy"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/ic_btn_bg"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>